<p id="notice"><%= notice %></p>

<h1>模板列表</h1>

<table class="table table-hover table-striped table-bordered table-condensed text-center">
  <thead>
    <tr>
      <th>名称</th>
      <th>创建者</th>
      <th>价格</th>
      <th>使用次数</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @templates.each do |template| %>
      <tr>
        <td><%= template.name %></td>
        <td><%= template.creator %></td>
        <td><%= template.price %></td>
        <td><%= template.times %></td>
        <td><%= link_to '详细', template %></td>
        <td><%= link_to '编辑', edit_template_path(template) %></td>
        <td><%= link_to '删除', template, method: :delete, data: { confirm: '确认删除？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

