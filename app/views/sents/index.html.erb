<div class="panel-warning">
  <div class="content-box-header panel-heading">
    <div class="panel-title">
      <h2 class="pull-left"><i class="fa fa-lg fa-desktop"></i> 已发货 <small>列表</small> </h2>
    </div>
  </div>
  <div class="content-box-large box-with-header">
    <div class="row">
      <div>
        <% @start_at = nil; @end_at = nil;%>
        <% if params[:start_at] || params[:end_at] || params[:agent_id] || params[:indent_name] %>
        <% @start_at = params[:start_at]%>
        <% @end_at = params[:end_at]%>
        <% @indent_name = params[:indent_name]%>
        <% @agent_search = Agent.find_by_id(params[:agent_id])%>
        <% end%>
        <%= form_tag sents_path, class: 'form-inline', method: 'get' do %>
        <div class="panel panel-info">
          <div class="panel-heading">
            <span>查询条件<span class="pull-right"><%= submit_tag '查询', class: 'btn btn-primary btn-xs' %></span></span>
          </div>
          <div class="panel-body">
            <div class="col-sm-6">
              <label>发货时间：</label>
              <%= date_field_tag :start_at, @start_at, class: 'form-control', data: {provide: 'datepicker'}, style: "width: 35%;", placeholder: '请选择起始日期' %>
              &nbsp;&nbsp;--&nbsp;&nbsp;
              <%= date_field_tag :end_at, @end_at, class: 'form-control', data: {provide: 'datepicker'}, style: "width: 35%;", placeholder: '请选择终止日期' %>
            </div>
            <div class="col-sm-3">
              <label>订单号: </label>
              <input name="indent_name" class="form-control" value="<%=@indent_name %>" style="width: 50%;"/>
            </div>
            <div class="col-sm-3">
              <label>代理商: </label>
              <input type="hidden" id="remoteDataAgent" name='agent_id' data-id="<%=@agent_search.try(:id)%>" data-name="<%=@agent_search.try(:full_name)%>" style="width: 60%" class="select2 ajax"/>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
    <div class="row content-table">
      <table class="table table-hover table-striped table-bordered table-condensed text-center">
        <thead>
          <tr>
            <th>订单号</th>
            <th>发货时间</th>
            <th>地区</th>
            <th>收货人</th>
            <th>联系方式</th>
            <th>橱柜</th>
            <th>衣柜</th>
            <th>门</th>
            <th>配件</th>
            <th>合计</th>
            <th>物流名称</th>
            <th>物流号</th>
          </tr>
        </thead>
        <tbody>
          <% @sents.each do |sent| %>
          <tr>
            <td><%= link_to sent.indent.name, sent.indent, data: {toggle: 'tooltip'}, title: '查看订单详细信息' %></td>
            <td><%= sent.sent_at.strftime("%Y-%m-%d") %></td>
            <td><%= sent.area %></td>
            <td><%= sent.receiver %></td>
            <td><%= sent.contact %></td>
            <td><%= sent.cupboard %></td>
            <td><%= sent.robe %></td>
            <td><%= sent.door %></td>
            <td><%= sent.part %></td>
            <td><%= sent.collection %></td>
            <td><%= sent.logistics %></td>
            <td><%= sent.logistics_code %></td>
            <!-- <td><%= link_to '编辑', edit_sent_path(sent) %></td> -->
            <!-- <td><%= link_to '删除', sent, method: :delete, data: { confirm: '你确定要删除吗?' } %></td> -->
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>