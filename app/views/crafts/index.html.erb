<p id="notice"><%= notice %></p>

<h1>Listing Crafts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Full name</th>
      <th>Note</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @crafts.each do |craft| %>
      <tr>
        <td><%= craft.name %></td>
        <td><%= craft.full_name %></td>
        <td><%= craft.note %></td>
        <td><%= craft.status %></td>
        <td><%= link_to 'Show', craft %></td>
        <td><%= link_to 'Edit', edit_craft_path(craft) %></td>
        <td><%= link_to 'Destroy', craft, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

