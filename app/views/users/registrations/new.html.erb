<% flash = devise_error_messages! %>
<% binding.pry %>
<script type="text/javascript">
<% flash.each do |msg| %>
  noty({
    text: "<%= msg %>",
    type: "danger",
    theme: 'bootstrapTheme',
    layout: 'bottomRight',
    closeWith: ['button', 'click'],
    template: '<div class="alert alert-error alert-danger"><span class="noty_text"></span><div class="noty_close"></div></div>',
    animation: { // 动画方式
      open: 'animated bounceInDown', // Animate.css 中的class 名称
      close: 'animated bounceOutDown', // Animate.css 中的class 名称
      easing: 'swing', // 非必须。使用 Animate.css 时，此设值无效
      speed: 500 // 非必须。使用 Animate.css 时，此设值无效
    }
  });
<% end %>
</script>
<div class="login-wrapper">
  <div class="box">
    <div class="content-wrap">
      <h1>注册</h1>
      <hr/>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'form-horizontal')  do |f| %>
      <div class="form-group row">
        <%= f.label :email, '账    号', class: 'control-label col-xs-3' %>
        <div class="col-xs-9">
          <%= f.text_field :email, autofocus: true, required: true, class: 'form-control', placeholder: '输入账号/邮箱/手机号' %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :password, '密    码', class: 'control-label col-xs-3' %>
        <div class="col-xs-9">
          <%= f.password_field :password, autocomplete: "off", required: true, class: 'form-control', placeholder: '输入密码号' %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :password_confirmation, '重复密码', class: 'control-label col-xs-3' %>
        <div class="col-xs-9">
          <%= f.password_field :password_confirmation, autocomplete: "off", required: true, class: 'form-control', placeholder: '输入重复密码' %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-xs-12">
          <div class="pull-right">
            已有账号？<%= link_to '点击登陆', new_user_session_path %>
            <%= f.submit "注册", class: "btn btn-primary signup" %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>