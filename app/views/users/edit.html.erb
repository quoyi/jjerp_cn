<div class="panel-warning">
  <div class="content-box-header panel-heading">
    <div class="panel-title"><h2><i class="fa fa-lg fa-desktop"></i> 员工 <small>编辑</small></h2></div>
    <div class="panel-options">
    </div>
  </div>
  <div class="content-box-large box-with-header">
    <%= form_for @user, html: {class: 'form-horizontal'} do |f| %>
    <div class="row">
      <div class="col-xs-6">
        <div class="form-group">
          <label class="col-xs-3 control-label text-right" style="margin-top: 8px; padding: 0px;" for="user[username]"><span class="require">*</span>用户名</label>
          <div class="col-xs-9">
            <%= f.text_field :username, maxlength: 20, required: true, class: 'form-control', placeholder: '请输入用户名' %>
          </div>
        </div>
      </div>
      <div class="col-xs-6">
        <div class="form-group">
          <%= f.label '邮箱/账号', class: 'col-xs-3 control-label text-right', style: 'margin-top: 8px; padding: 0px;' %>
          <div class="col-xs-9">
            <p class="form-control-static"><%= @user.email %></p>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-6">
        <div class="form-group">
          <label class="col-xs-3 control-label text-right" style="margin-top: 8px; padding: 0px;" for="user[role_ids]"><span class="require">*</span>角色</label>
          <div class="col-xs-9">
            <%= f.select :role_ids, Role.where.not(nick: 'super_admin').collect{|r| [r.name, r.id]}, {include_blank: '请选择', selected: "#{@role.id if @role.present?}"}, required: true, class: 'form-control' %>
          </div>
        </div>
      </div>
      <div class="col-xs-6">
        <div class="form-group">
          <%= f.label '电话', for: 'user[mobile]', class: 'col-xs-3 control-label text-right', style: 'margin-top: 8px; padding: 0px;' %>
          <div class="col-xs-9">
            <%= f.phone_field :mobile, class: 'form-control', placeholder: '请输入联系电话' %>
          </div>
        </div>
      </div>
    </div>
    <div class="row" style="margin-right: 0px;">
        <div class="form-group text-right" style="margin-right: 0px;">
          <%= f.submit "保存", class: "btn btn-sm btn-primary" %>
          <%= link_to '返回', users_path, class: 'btn btn-sm btn-default' %>
        </div>
    </div>
    <% end %>
  </div>
</div>