<div class="panel-warning">
  <div class="content-box-header panel-heading">
    <div class="panel-title">
      <h2 class="pull-left"><i class="fa fa-lg fa-desktop"></i> 个人设置 </h2>
      <div class="pull-right panel-options">
      </div>
    </div>
  </div>
  <div class="content-box-large box-with-header">
    <div class="panel panel-inverse">
      <div class="panel-body">
        <%= form_for @user, html: {class: 'form-horizontal'} do |f| %>
        <div class="form-group">
        <label class="col-xs-2 control-label" for="user_username"><span class="require">*</span>用户名</label>
          <div class="col-xs-10">
            <%= f.text_field :username, maxlength: 25, required: true, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :email, '邮箱', class: 'col-xs-2 control-label' %>
          <div class="col-xs-10">
            <%= f.text_field :email, class: 'form-control', disabled: 'disabled' %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-xs-offset-10 col-xs-2 pull-right">
            <%= f.submit '提交', class: 'btn btn-primary' %>
            <%= f.button '重置', type: 'reset', class: 'btn btn-default' %>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>