<div class="login-wrapper">
  <div class="box">
    <div class="content-wrap">
      <h1>登陆</h1>
      <hr/>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'form-horizontal') do |f| %>
      <div class="form-group row">
        <%= f.label :email, '账    号', class: 'control-label col-xs-3' %>
        <div class="col-xs-9">
          <%= f.text_field :email, autofocus: true, class: 'form-control', placeholder: '输入账号/邮箱/手机号' %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :password, '密    码', class: 'control-label col-xs-3' %>
        <div class="col-xs-9">
          <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: '输入密码' %>
        </div>
      </div>
      <% if devise_mapping.rememberable? -%>
      <div class="form-group remember_me">
        <div class="col-xs-offset-3">
          <%= f.check_box :remember_me, class: 'control-label' %>
          <%= f.label :remember_me, '记住登陆状态' %>
        </div>
      </div>
      <% end -%>
      <div class="form-group row">
        <div class="col-xs-12">
          <div class="pull-right">
            还没有账号？<%= link_to '点击注册', new_user_registration_path %>
            <%= f.submit "登陆", class: "btn btn-primary signup" %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>