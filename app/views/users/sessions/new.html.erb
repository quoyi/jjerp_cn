<div class="login-wrapper">
  <div class="box">
    <div class="content-wrap">
      <h1>登陆</h1>
      <hr/>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'form-horizontal') do |f| %>
      <div class="form-group row">
        <%= f.label :email, '邮    箱', class: 'control-label col-xs-3' %>
        <div class="col-xs-9">
          <%= f.email_field :email, autofocus: true, required: true, class: 'form-control', placeholder: '输入邮箱地址' %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :password, '密    码', class: 'control-label col-xs-3' %>
        <div class="col-xs-9">
          <%= f.password_field :password, autocomplete: "off", required: true, class: 'form-control', placeholder: '输入密码' %>
        </div>
      </div>
      <% if devise_mapping.rememberable? -%>
      <div class="form-group remember_me">
        <div class="col-xs-offset-3">
          <%= f.check_box :remember_me, class: 'control-label' %>
          <%= f.label :remember_me, '记住登陆状态' %>
        </div>
      </div>
      <% end -%>

      <div class="form-group row">
        <div class="col-xs-12">
          <div class="pull-right">
            <%= link_to '注册账号', new_user_registration_path %>
            <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
              <%= link_to "找回密码", new_password_path(resource_name) %>
            <% end -%>
            <%= f.submit "登陆", class: "btn btn-primary signup" %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>