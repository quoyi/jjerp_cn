<div class="panel-warning">
  <div class="content-box-header panel-heading">
    <div class="panel-title">
      <h2 class="pull-left"><i class="fa fa-lg fa-desktop"></i> 未包装订单 <small>列表</small></h2>
    </div>
  </div>
  <!-- Page title -->
  <div class="content-box-large box-with-header">
    <div class="row content-table">
      <table class="table table-hover table-striped table-bordered table-condensed text-center">
        <thead>
          <tr class="info">
            <th>总订单号</th>
            <th>终端客户</th>
            <th>代理商</th>
            <th>接单时间</th>
            <th>状态</th>
            <th>操作</th>
          </tr>
        </thead>
        <tbody>
          <% @indents.each do |indent|%>
          <tr>
            <td><%= link_to indent.name, indent_path(indent), class: 'detail-link' %></td>
            <td><%= indent.customer %></td>
            <td><%= indent.agent.try(:full_name) %></td>
            <td><%= indent.created_at.localtime.strftime("%Y-%m-%d")%></td>
            <td><%= indent.status_name %></td>
            <td><%= link_to '开始包装', package_indent_path(indent), class: 'detail-link' %></td>
          </tr>
          <%end%>
        </tbody>
      </table>
    </div>
  </div>
</div>