<div class="panel-warning">
  <div class="content-box-header panel-heading">
    <div class="panel-title"><h2><i class="fa fa-lg fa-desktop"></i> 订单 <small>详细</small> </h2></div>
    <div class="panel-options">
      <%= link_to '返回', indents_path, class: 'btn btn-info', data: {toggle:'tooltip'}, title: '返回到订单列表' %>
    </div>
  </div>
  <div class="content-box-large box-with-header">
    <div class="row">
      <div>
        <p>订单号：
          <code><%= @indent.name %></code>&nbsp;&nbsp;&nbsp;&nbsp;
          <small class="indent-add-order-btn"><%= link_to '添加子订单', edit_indent_path %></small>
        </p>
      </div>
      <table class="table table-hover table-striped table-bordered table-condensed">
        <tr>
          <th>子订单号</th>
          <th>订单类型</th>
          <th>数量</th>
          <th>厚度</th>
          <th>材质</th>
          <th>颜色</th>
          <th>长度</th>
          <th>宽度</th>
          <th>高度</th>
          <!-- <th>状态</th> -->
          <th>备注</th>
        </tr>
        <% @orders.each do |o| %>
        <tr>
          <td><%= link_to o.name, o, data: {toggle:'tooltip'}, title: '查看子订单详细信息' %></td>
          <td><%= o.order_category.try(:name) %></td>
          <td><%= o.number %></td>
          <td><%= MaterialCategory.find(o.ply).try(:name) %></td>
          <td><%= MaterialCategory.find(o.texture).try(:name) %></td>
          <td><%= MaterialCategory.find(o.color).try(:name) %></td>
          <td><%= o.length %></td>
          <td><%= o.width %></td>
          <td><%= o.height %></td>
          <!-- <td><%= o.status_name %></td> -->
          <td><%= o.note %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
<%= render '/orders/new' %>