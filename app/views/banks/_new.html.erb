<!-- Modal -->
<div class="modal fade" id="addBank" tabindex="-1" role="dialog" aria-labelledby="addBankLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="addBankLabel"> 银行账户 <small>新建</small></h4>
      </div>
      <%= form_for @bank do |f| %>
      <div class="modal-body">
        <table class="table table-hover table-striped table-bordered table-condensed">
          <tr>
            <td data-toggle="tooltip" title="必填项">
              <label><span class="require">*</span>编号</label>
            </td>
            <td>
              <%= f.text_field :name, required: true, class: 'form-control' %>
            </td>
            <td data-toggle="tooltip" title="必填项">
              <label><span class="require">*</span>开户银行</label>
            </td>
            <td>
              <%= f.text_field :bank_name, maxlength: 25, required: true, class: 'form-control' %>
            </td>
          </tr>
          <tr>
            <td data-toggle="tooltip" title="必填项">
              <label><span class="require">*</span>卡号</label>
            </td>
            <td>
              <%= f.number_field :bank_card, required: true, class: 'form-control' %>
            </td>
            <td data-toggle="tooltip" title="必填项">
              <label><span class="require">*</span>余额</label>
            </td>
            <td>
              <%= f.number_field :balance, min: 0, step: 0.01, default: 0, required: true, class: 'form-control' %>
            </td>
          </tr>
        </table>
      </div>
      <div class="modal-footer">
        <% if @bank.new_record? %>
        <%= f.button '取消', class: 'btn btn-default', data: {dismiss: 'modal'} %>
        <% end %>
        <%= f.submit '提交', class: 'btn btn-primary' %>
      </div>
      <% end %>
    </div>
  </div>
</div>