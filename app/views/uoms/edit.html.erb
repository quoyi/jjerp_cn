<%= form_for @uom, html: {class: 'form-horizontal'} do |f| %>
<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
  <h4 class="modal-title" id="replenishSentLabel"> 单位 <small> 编辑 </small>
  </h4>
</div>
<div class="modal-body">
  <div class="form-group">
    <label class="control-label col-sm-3"><span class="require">*</span>名称</label>
    <div class="col-sm-9">
      <%= f.text_field :name, value: @uom.name, class: 'form-control', required: true %>
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-sm-3">备注</label>
    <div class="col-sm-9">
      <%= f.text_field :note, value: @uom.note, class: 'form-control' %>
    </div>
  </div>
</div>
<div class="modal-footer">
  <%= f.button '取消', class: 'btn btn-default', data: {dismiss: 'modal'} %>
  <%= f.submit '提交', class: 'btn btn-primary' %>
</div>
<% end %>