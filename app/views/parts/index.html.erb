<div class="panel-warning">
  <div class="content-box-header panel-heading">
    <div class="panel-title">
    <h2 class="pull-left"><i class="fa fa-lg fa-desktop"></i> 配件 <small>列表</small> </h2></div>
    <div class="panel-options">
      <%#= link_to '新建', '#', class: 'btn btn-info', data: { toggle: 'modal', target: '#addParts'} %>
    </div>
  </div>
  <div class="content-box-large box-with-header">
    <div class="row content-table">
      <div class="panel panel-info">
        <div class="panel-heading">
          <span>查询条件</span>
        </div>
        <div class="panel-body">
          <%= form_tag stat_incomes_path, class: 'form-inline', method: 'get' do %>
          <%= label_tag :start_at, '查询时间', class: 'control-label', style: 'margin: 0px;' %>
          <%= date_field_tag :start_at, params[:start_at].presence || Date.today.begin_of_month, class: 'form-control', data: {provide: 'datepicker'}, placeholder: '请选择起始日期' %>
          &nbsp;&nbsp;--&nbsp;&nbsp;
          <%= date_field_tag :end_at, params[:start_at].presence || @end_at, class: 'form-control', data: {provide: 'datepicker'}, placeholder: '请选择终止日期' %>
          <%= submit_tag '查询', class: 'btn btn-primary', style: 'margin: 0 0 0 10px;' %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="row content-table">
      <table class="table table-hover table-striped table-bordered table-condensed text-center">
        <thead>
          <tr>
            <th>类型</th>
            <th>订单号</th>
            <th>单价</th>
            <th>单位</th>
            <th>数量</th>
            <th>库存</th>
            <th>品牌</th>
            <th>供应商</th>
            <th>操作</th>
          </tr>
        </thead>
        <tbody>
          <% @parts.each do |p| %>
          <tr>
            <td><%= p.part_category.try(:name) %></td>
            <td><%= p.order.try(:name) %></td>
            <td><%= p.price %></td>
            <td><%= p.uom %></td>
            <td><%= p.number %></td>
            <td><%= p.store %></td>
            <td><%= p.brand %></td>
            <td><%= p.supply.try(:full_name) %></td>
            <td><%= link_to '删除', p, method: :delete, data: { confirm: '警告！ 操作不可逆转，确认删除？' } %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<%= render 'new' %>