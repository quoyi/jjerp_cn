    <div class="row content-table">
      <table class="table table-hover table-striped table-bordered table-condensed text-center">
        <thead>
          <tr>
            <th>订单号</th>
            <th>类型</th>
            <th>名称</th>
            <th>单位</th>
            <th>数量</th>
            <th>单价</th>
            <th>厚度</th>
            <th>材质</th>
            <th>颜色</th>
            <th>尺寸</th>
            <th>终端客户</th>
            <th>代理商</th>
            <th>备注</th>
            <th>操作</th>
          </tr>
        </thead>
        <tbody>
          <% @units.each do |u| %>
          <tr>
            <td><%= u.order.try(:name) %></td>
            <td><%= u.unit_category.try(:name) %></td>
            <td><%= u.full_name %></td>
            <td><%= u.uom %></td>
            <td><%= u.number %></td>
            <td><%= u.price %></td>
            <td><%= MaterialCategory.find_by_id(u.ply).try(:name) %></td>
            <td><%= MaterialCategory.find_by_id(u.texture).try(:name) %></td>
            <td><%= MaterialCategory.find_by_id(u.color).try(:name) %></td>
            <td><%= u.size %></td>
            <td><%= u.order.indent.customer %></td>
            <td><%= u.order.indent.agent.try(:full_name) %></td>
            <td style="max-width:200px;"><%= u.note %></td>
            <td><%= link_to '删除', u, method: :delete, data: { confirm: '警告！ 操作不可逆转，确认删除？' } %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<%= render 'new' %>