<!-- Modal -->
<div class="modal fade" id="addAgent" tabindex="-1" role="dialog" aria-labelledby="addAgentLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <%= form_for @agent, html: {multipart: true} do |f| %>
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="addAgentLabel">代理商 <small>新建</small></h4>
      </div>
      <div class="modal-body">
        <div class="form-group">
          <%= f.label '代理商名称' %>
          <%= f.text_field :full_name, required: true %>
        </div>
        <div class="form-group">
          <%= f.label '联系人' %>
          <%= f.text_field :contacts, required: true %>
        </div>
        <div class="form-group">
          <%= f.label '电话' %>
          <%= f.text_field :mobile, required: true %>
        </div>
        <div class="form-group">
          <%= f.label 'QQ' %>
          <%= f.text_field :e_account %>
        </div>
        <div class="form-group">
          <%= f.label '传真' %>
          <%= f.text_field :fax, required: true %>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
        <button type="button" class="btn btn-primary">提交</button>
      </div>
      <% end %>
    </div>
  </div>
</div>