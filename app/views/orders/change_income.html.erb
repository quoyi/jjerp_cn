<script type="text/javascript">
$("[data-provide=datepicker]").datepicker({
format: 'yyyy-mm-dd',
language: 'zh-CN',
autoclose: true
});
</script>
<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
  <h4 class="modal-title" id="changeIncomesLabel"> 子订单转款</h4>
</div>
<%= form_for @order, url: change_income_order_path(@order), method: 'POST', html: {class: 'form-horizontal'} do |f| %>
<div class="modal-body">
  <div class="form-group">
    <%= f.label '订单号', class: 'control-label col-sm-3' %>
    <div class="col-sm-9">
      <%= text_field_tag '', @order.name, class: 'form-control', disabled: true %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label '订单金额', class: 'control-label col-sm-3' %>
    <div class="col-sm-9">
      <%= text_field_tag '', @order.price, class: 'form-control', disabled: true %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label '可用金额', class: 'control-label col-sm-3' %>
    <div class="col-sm-9">
      <%= text_field_tag '', @order.incomes.pluck(:money).sum, class: 'form-control', disabled: true %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :id, '目标订单', class: 'control-label col-sm-3' %>
    <div class="col-sm-9">
      <%= f.collection_select :id, @order.agent.orders.where("arrear > 0 AND id <> ?", @order.id), :id, :name, {include_blank: '代理商余额'}, {class: 'form-control', onchange: 'changeIncomeOrder(this)'} %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :price, '转款金额', class: 'control-label col-sm-3'%>
    <div class="col-sm-9">
      <%= f.number_field :price, min: 0, max: @order.incomes.pluck(:money).sum, step: 0.01, value: 0, class: 'form-control change_income_order_price', required: true, style: 'margin: 1px auto;' %>
    </div>
  </div>
</div>
<div class="modal-footer">
  <%= f.button '取消', class: 'btn btn-default', data: {dismiss: 'modal'} %>
  <%= f.submit '提交', class: 'btn btn-primary' %>
</div>
<% end %>