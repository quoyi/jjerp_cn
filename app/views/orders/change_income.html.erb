<script type="text/javascript">
$("[data-provide=datepicker]").datepicker({
format: 'yyyy-mm-dd',
language: 'zh-CN',
autoclose: true
});
</script>
<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
  <h4 class="modal-title" id="changeIncomesLabel"> 子订单转款
  <small>
  订单号:&nbsp;&nbsp;<code><%= @order.name %></code>&nbsp;&nbsp;&nbsp;&nbsp;
  状态:&nbsp;&nbsp;<code><%= @order.status_name %></code>&nbsp;&nbsp;&nbsp;&nbsp;
  金额:&nbsp;&nbsp;<code><%= @order.price %>&nbsp;元</code>&nbsp;&nbsp;&nbsp;&nbsp;
  已收:&nbsp;&nbsp;<code><%= @order.incomes.pluck(:money).sum %>&nbsp;元</code>&nbsp;&nbsp;&nbsp;&nbsp;
  </small>
  </h4>
</div>
<%= form_for @order, url: change_income_order_path(@order), method: 'POST', class: 'form-inline' do |f| %>
<div class="modal-body">
  <div class="row">
    <div class="col-sm-12">
      <div class="col-sm-5">
        <%= f.label '目标订单', class: 'col-sm-5 text-right', style: 'margin-top: 5px;' %>
        <%= f.collection_select :id, @order.agent.orders.where("arrear > 0 AND id <> ?", @order.id), :id, :name, {include_blank: '代理商余额'}, {class: 'col-sm-7', onchange: 'changeIncomeOrder(this)'} %>
      </div>
      <div class="col-sm-5">
        <%= f.label '转款金额', class: 'col-sm-5 text-right', style: 'margin-top: 5px;' %>
        <%= f.number_field :price, min: 0, max: (@order.price - @order.arrear), step: 0.01, value: (@order.price - @order.arrear), class: 'col-sm-7 change_income_order_price', required: true, style: 'margin: 1px auto;' %>
      </div>
    </div>
  </div>
</div>
<div class="modal-footer">
  <%= f.button '取消', class: 'btn btn-default', data: {dismiss: 'modal'} %>
  <%= f.submit '提交', class: 'btn btn-primary' %>
</div>
<% end %>