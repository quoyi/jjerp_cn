<div class="panel-warning">
  <div class="content-box-header panel-heading">
    <div class="panel-title"><h2><i class="fa fa-lg fa-desktop"></i> 子订单 <small>详细</small> </h2></div>
    <div class="panel-options">
      <%= link_to '返回', :back, class: 'btn btn-info', data: {toggle:'tooltip'}, title: '返回到上一级' %>
    </div>
  </div>
  <div class="content-box-large box-with-header">
    <div class="row">
      <div class="col-sm-3">
        <div class="panel panel-info">
          <div class="panel-heading">
            <span>客户信息</span>
          </div>
          <table class="table table-hover table-striped table-bordered table-condensed text-center">
            <tr>
              <th>客户编号</th>
              <td><%= @agent.try(:name) %></td>
            </tr>
            <tr>
              <th>客户名称</th>
              <td><%= @agent.try(:full_name) %></td>
            </tr>
            <tr>
              <th>负责人</th>
              <td><%= @agent.try(:contacts) %></td>
            </tr>
            <tr>
              <th>手机</th>
              <td><%= @agent.try(:mobile) %></td>
            </tr>
            <tr>
              <th>QQ</th>
              <td><%= @agent.try(:e_account) %></td>
            </tr>
            <tr>
              <th>传真</th>
              <td><%= @agent.try(:fax) %></td>
            </tr>
            <tr>
              <th>邮箱</th>
              <td><%= @agent.try(:email) %></td>
            </tr>
            <tr>
              <th>微信</th>
              <td><%= @agent.try(:wechar) %></td>
            </tr>
            <tr>
              <th>要求物流</th>
              <td><%= @agent.try(:logistics) %></td>
            </tr>
            <tr>
              <th>结账周期</th>
              <td><%= @agent.try(:cycle) %></td>
            </tr>
            <tr>
              <th>备注</th>
              <td><%= @agent.try(:note) %></td>
            </tr>
          </table>
        </div>
      </div>
      <div class="col-sm-9">
        <div class="panel panel-info">
          <div class="panel-heading">
            <span>子订单详细</span> <small>总订单号：<%= link_to @indent.name, indent_path(@indent), data: {toggle: 'tooltip'}, title: '总订单编号' %>&nbsp;&nbsp;&nbsp;&nbsp;状态：<%= @order.status_name %></small>
            <div class="pull-right" style="padding: 3px 0;">
              <%= form_tag import_orders_path, multipart: true, id: 'import-form' do %>
              <%= hidden_field_tag :id, @order.id, id: 'import-field-id', class: 'hidden' %>
              <%= file_field_tag :file, accept: 'csv', multiple: false, id: 'import-field-file', class: 'hidden' %>
              <%= link_to '导入拆单', '#', id: 'import-btn', class: 'btn-xs btn-primary', data: {toggle:'tooltip'}, title: '从外部文件导入拆单信息' %>
              <% end %>
            </div>
          </div>
          <table class="table table-hover table-striped table-bordered table-condensed text-center">
            <tr>
              <th>子订单号</th>
              <td colspan="3"><code><%= @order.name %></code></td>
              <th>登记时间</th>
              <td colspan="2"><%= @order.created_at.strftime('%Y-%m-%d') if @indent.created_at.present? %></td>
              <th>确认时间</th>
              <td colspan="2"><%= @indent.verify_at.strftime('%Y-%m-%d') if @indent.verify_at.present? %></td>
            </tr>
            <tr>
              <th>金额</th>
              <td colspan="3"><%= @indent.amount %></td>
              <th>要求出厂</th>
              <td colspan="2"><%= @indent.require_at.strftime('%Y-%m-%d') if @indent.require_at.present? %></td>
              <th>要求物流</th>
              <td colspan="2"><%= @indent.logistics %></td>
            </tr>
            <tr>
              <th>备注</th>
              <td colspan="9"><%= @order.note || @indent.note %></td>
            </tr>
            <%= render 'order_units' %>
            <%= render 'order_parts' %>
            <%= render 'order_crafts' %>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>