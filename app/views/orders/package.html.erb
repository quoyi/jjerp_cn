<div class="panel-warning">
  <div class="content-box-header panel-heading">
    <div class="panel-title">
      <h2><i class="fa fa-lg fa-desktop"></i> 包装管理
      <small style="font-size: 14px;">
      订单号：<%= link_to @order.name, indent_path(@order.indent), class: 'detail-link' %>&nbsp;&nbsp;&nbsp;&nbsp;
      下单客户：<%= link_to @order.indent.agent.full_name, agents_path, class: 'detail-link' %>&nbsp;&nbsp;&nbsp;&nbsp;一旦选择打印，已打包的部件／配件将无法改变
      </small>
      <div class="pull-right panel-options">
        <%= link_to '返回', :back, class: 'btn btn-info' %>
      </div>
      </h2>
    </div>
  </div>
  <div class="content-box-large box-with-header" style="padding-left: 5px; padding-right: 5px;">
    <div class="panel panel-info">
      <div class="panel-heading">
        <div class="row">
          <div class="col-sm-4">
            <label style="font-size: 18px;">条码</label>
            <%= text_field_tag :unit_part_craft_name, '', autofocus:true, style: 'font-size: 18px; font-weight: bold;' %>
          </div>
          <div class="col-md-6 col-sm-6">
            <div class="row" style="margin-top: 2px;">
              <%= form_tag("/orders/#{@order.id}/package.pdf", method: :post, class: 'form-inline') do |f| %>
              <%= hidden_field_tag 'order_unit_ids', '' %>
              <%= hidden_field_tag 'order_label_size', 0 %><!-- 标签数量 -->
              <div class="col-sm-6">
                <label>&nbsp;&nbsp;&nbsp;&nbsp;尺寸：</label>
                <%= number_field_tag 'length', @length, value: "80", class: "form-control", style: "width: 30%", readOnly: true, id: 'package_label_length' %>
                &nbsp;&nbsp;×&nbsp;&nbsp;
                <%= number_field_tag 'width', @width, value: "60", class: "form-control", style: "width: 30%", readOnly: true, id: 'package_label_width' %>
              </div>
              <div class="col-sm-6">
                <button class="btn btn-info" onclick="return previous();">上一包</button>
                <button class="btn btn-info" onclick="return next();">下一包</button>
                <button class="btn btn-primary" onclick="return print_current_page();">打印当前</button>
                <button class="btn btn-primary" onclick="return print_pages(this);" data-units="<%= @order_units.map(&:is_printed).uniq.select { |e| !e  }.size %>">批量打印</button>
                <!-- <button class="btn btn-primary" onclick="return alert('暂未开放！');" <%#= disabled='disabled' unless @packages.present? %>>重新打印</button> -->
              </div>
              <% end %>
            </div>
          </div>
          <div class="col-md-2 col-sm-2 text-center">
          <%= form_tag("/orders/#{@order.id}/reprint.pdf", method: :post) do |reprint_form| %>
            <%= hidden_field_tag :length, "80" %>
            <%= hidden_field_tag :width, "60" %>
            <button type="submit" class="btn btn-primary" style="margin-top: 2px;" <%= disabled='disabled' unless @order.packages.map(&:label_size).sum > 0 %>>重新打印</button>
          <% end %>
          </div>
        </div>
      </div>
      <div class="panel-body">
        <div class="row" style="box-sizing: border-box;">
          <div class="col-md-4 col-sm-4">
            <table class="table table-striped table-condensed" id="old_table" style="page-break-before:always;">
              <caption style="text-align:center; font-weight: bold; font-size: 20px;">未打包</caption>
              <thead>
                <tr class="info">
                  <th class="col-xs-2">条码</th>
                  <th class="col-xs-2">类型</th>
                  <th class="col-xs-2">名称</th>
                  <!-- <th class="col-xs-1">长</th>
                  <th class="col-xs-1">宽</th>
                  <th class="col-xs-1">厚</th>
                  <th class="col-xs-2">颜色</th>
                  <th class="col-xs-1">部件尺寸</th> -->
                </tr>
              </thead>
              <tbody>
                <% @order_units.each do |order_unit|%>
                <% next if order_unit.is_printed %>
                <tr onclick="remove_order(this)" id="order_unit_<%=order_unit.id%>">
                  <td><%= order_unit.name%></td>
                  <td>部件</td>
                  <td><%= order_unit.full_name%></td>
                  <!-- <td><%#= order_unit.length%></td>
                  <td><%#= order_unit.width%></td>
                  <td><%#= MaterialCategory.find_by_id(order_unit.ply).try(:name)%></td>
                  <td><%#= MaterialCategory.find_by_id(order_unit.color).try(:name)%></td>
                  <td><%= order_unit.size%></td> -->
                </tr>
                <%end%>
                <%# @order_parts.each do |order_part|%>
                <%# next if order_part.is_printed %>
                <!-- <tr onclick="remove_order(this)" id="order_part_<%#=order_part.id%>">
                  <td><%#= order_part.name%></td>
                  <td>配件</td>
                  <td><%#= order_part.part_category.name%></td>
                </tr> -->
                <%# end %>
              </tbody>
            </table>
          </div>
          <div class="col-md-4 col-sm-4">
            <table class="table table-striped table-condensed" id="new_table" style="page-break-before:always;">
              <caption style="text-align:center; font-weight: bold; font-size: 20px;">已打包</caption>
              <thead>
                <tr class="success">
                  <th class="col-xs-2">条码</th>
                  <th class="col-xs-2">类型</th>
                  <th class="col-xs-2">名称</th>
                  <!-- <th class="col-xs-1">长</th>
                  <th class="col-xs-1">宽</th>
                  <th class="col-xs-1">厚</th>
                  <th class="col-xs-2">颜色</th>
                  <th class="col-xs-1">部件尺寸</th> -->
                </tr>
              </thead>
              <tbody>
              </tbody>
            </table>
          </div>
          <div class="col-md-4 col-sm-4">
            <table class="table table-striped table-condensed" id="printed_table" style="page-break-before:always;">
              <caption style="text-align:center; font-weight: bold; font-size: 20px;">已打印</caption>
              <thead>
                <tr class="info">
                  <th class="col-xs-2">条码</th>
                  <th class="col-xs-1">类型</th>
                  <th class="col-xs-2">名称</th>
                  <!-- <th class="col-xs-1">长</th>
                  <th class="col-xs-1">宽</th>
                  <th class="col-xs-1">厚</th>
                  <th class="col-xs-2">颜色</th>
                  <th class="col-xs-1">部件尺寸</th> -->
                </tr>
              </thead>
              <tbody>
                <% @packages.each do |p|%>
                <% Unit.where(id: p.unit_ids.split(',')).each do |order_unit|%>
                <% next unless order_unit.is_printed %>
                <tr>
                  <td><%= order_unit.name%></td>
                  <td>部件</td>
                  <td><%= order_unit.full_name%></td>
                  <!-- <td><%= order_unit.length%></td>
                  <td><%= order_unit.width%></td>
                  <td><%= MaterialCategory.find_by_id(order_unit.ply).try(:name)%></td>
                  <td><%= MaterialCategory.find_by_id(order_unit.color).try(:name)%></td>
                  <td><%= order_unit.size%></td> -->
                </tr>
                <% end %>
                <%# Part.where(id: p.part_ids.split(',')).each do |order_part|%>
                <%# next unless order_part.is_printed %>
                <!-- <tr>
                  <td><%#= order_part.name%></td>
                  <td>配件</td>
                  <td><%#= order_part.part_category.name%></td>
                </tr> -->
                <%# end %>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>