<!DOCTYPE html>
<html lang="<%= I18n.locale %>">
  <head>
    <title><%= ENV.fetch('APP_NAME') { '伊思尔生产管理' } %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= favicon_link_tag 'favicon.ico', rel: 'shortcut icon', type: 'image/png' %>

    <%= render 'layouts/shim' %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'layouts/header' %>

    <div class="container-fluid">
      <%= render 'layouts/message' %>
      <% if current_user %>
        <div class="page-content">
          <div class="row" style="margin-top: 5px;">
            <%= render 'layouts/sidebar' %>
            <%= render 'layouts/content' %>
          </div>
        </div>
        <% if controller_name == 'orders' && action_name == 'not_sent' %>
          <!-- 漂浮容器 -->
          <%= render 'layouts/float' %>
        <% end %>
      <% else %>
        <div class="static-index-page text-center">
          <%= yield %>
        </div>
      <% end %>

      <div class="clearfix"></div>
    </div>

    <%= render 'layouts/footer' %>
  </body>
</html>
