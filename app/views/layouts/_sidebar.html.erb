<div class="col-md-2">
    <div class="sidebar content-box" style="display: block;">
        <ul class="nav">
            <!-- Main menu -->
            <li class='<%= 'open' if controller_name == 'statics' %>'><a href="<%= statics_home_path %>"><i class="fa fa-home"></i> 个人首页 </a></li>
            <!-- <li  class="submenu">
                <a href="#">
                <i class="fa fa-sitemap"></i> 部门信息 </span>
            </a>
        </li> -->
        <% if current_user.permission?("RolesController", "index") ||
        current_user.permission?("UsersController", "index")
        %>
        <li  class="submenu <%= 'current open' if ['users', 'roles'].include?(controller_name)%>">
            <a href="#">
                <i class="fa fa-user"></i> 员工权限 <span class="caret pull-right"></span>
            </a>
            <ul>
                <% if current_user.permission?("UsersController", "index")%>
                <li class="<%="#{'active' if controller_name == 'users'}" %>"><%= link_to '员工信息', users_path %></li>
                <% end %>
                <% if current_user.permission?("RolesController", "index")%>
                <li class="<%="#{'active' if controller_name == 'roles'}" %>"><%= link_to '角色权限', roles_path %></li>
                <%end%>
            </ul>
        </li>
        <%end%>
        <% if current_user.permission?("AgentsController", "index") ||
        current_user.permission?("SuppliessController", "index") ||
        current_user.permission?("OrderCategoriesController", "index") ||
        current_user.permission?("UnitCategoriesController", "index") ||
        current_user.permission?("UnitsController", "index") ||
        current_user.permission?("PartCategoriesController", "index") ||
        current_user.permission?("PartsController", "index") ||
        current_user.permission?("MaterialCategoriesController", "index") ||
        current_user.permission?("MaterialsController", "index")
        %>
        <li  class="submenu <%= 'open' if ['agents', 'supplies', 'order_categories', 'unit_categories', 'units', 'part_categories', 'parts', 'material_categories', 'materials'].include?(controller_name)%>">
            <a href="#">
                <i class="fa fa-cogs"></i> 基础数据 <span class="caret pull-right"></span>
            </a>
            <ul>
                <%if current_user.permission?("AgentsController", "index")%>
                <li class="<%="#{'active' if controller_name == 'agents'}" %>"><%= link_to '经销商', agents_path %></li>
                <%end%>
                <%if current_user.permission?("SuppliesController", "index")%>
                <li class="<%="#{'active' if controller_name == 'supplies'}" %>"><%= link_to '供应商', supplies_path %></li>
                <%end%>
                <%if current_user.permission?("OrderCategoriesController", "index")%>
                <li class="<%="#{'active' if controller_name == 'order_categories'}" %>"><%= link_to '订单类型', order_categories_path %></li>
                <%end%>
                <% if current_user.permission?("UnitCategoriesController", "index")%>
                <li class="<%="#{'active' if controller_name == 'unit_categories'}" %>"><%= link_to '部件类型', unit_categories_path %></li>
                <%end%>
                <% if current_user.permission?("UnitsController", "index")%>
                <li class="<%="#{'active' if controller_name == 'units'}" %>"><%= link_to '部件', units_path %></li>
                <%end%>
                <% if current_user.permission?("PartCategoriesController", "index")%>
                <li class="<%="#{'active' if controller_name == 'part_categories'}" %>"><%= link_to '配件类型', part_categories_path %></li>
                <%end%>
                <% if current_user.permission?("PartsController", "index")%>
                <li class="<%="#{'active' if controller_name == 'parts'}" %>"><%= link_to '配件', parts_path %></li>
                <% end %>
                <% if current_user.permission?("MaterialCategoriesController", "index") %>
                <li class="<%="#{'active' if controller_name == 'material_categories'}" %>"><%= link_to '板料类型', material_categories_path %></li>
                <% end %>
                <% if current_user.permission?("MaterialsController", "index") %>
                <li class="<%="#{'active' if controller_name == 'materials'}" %>"><%= link_to '板料', materials_path %></li>
                <% end %>
            </ul>
        </li>
        <%end%>
        <% if current_user.permission?("IncomesController", "index") ||
        current_user.permission?("ExpendsController", "index") || 
        current_user.permission?("BanksController", "index")
        %>
        <li  class="submenu <%= 'open' if ['banks', 'incomes', 'expends'].include?(controller_name)%>">
            <a href="#">
                <i class="fa fa-calculator"></i> 财务数据 <span class="caret pull-right"></span>
            </a>
            <ul>
                <% if current_user.permission?("IncomesController", "index") %>
                    <li class='<%="#{'active' if controller_name == 'incomes' && action_name == 'index' }" %>'><%= link_to '收入', incomes_path %></li>
                <% end %>
                <% if current_user.permission?("ExpendsController", "index") %>
                    <li class='<%="#{'active' if controller_name == 'expends'}" %>'><%= link_to '支出', expends_path %></li>
                 <% end %>
                 <% if current_user.permission?("IncomesController", "stat") %>
                    <li class='<%="#{'active' if controller_name == 'incomes' && action_name == 'stat'}" %>'><%= link_to '收支统计', stat_incomes_path %></li>
                 <% end %>
                 <% if current_user.permission?("BanksController", "index") %>
                    <li class='<%="#{'active' if controller_name == 'banks' && action_name == 'index' }" %>'><%= link_to '银行账户', banks_path %></li>
                <% end %>
            </ul>
        </li>
        <% end %>
        <% if current_user.permission?("IndentsController", "index") ||
        current_user.permission?("OrdersController", "index")
        %>
        <li  class="submenu <%= 'open' if ['indents', 'orders'].include?(controller_name) && ['index', 'show', 'edit'].include?(action_name) %>">
            <a href="#">
                <i class="fa fa-briefcase"></i> 订单管理 <span class="caret pull-right"></span>
            </a>
            <ul>
                <% if current_user.permission?("IndentsController", "index")%>
                <li class='<%="#{'active' if controller_name == 'indents'}" %>'><%= link_to '订单', indents_path %></li>
                <% end %>
                <% if current_user.permission?("OrdersController", "index")%>
                <li class='<%="#{'active' if controller_name == 'orders'}" %>'><%= link_to '子订单', orders_path %></li>
                <% end %>
            </ul>
        </li>
        <% end %>
        <% if current_user.permission?("IndentsController", "unpack") ||
        current_user.permission?("OrdersController", "producing")
        %>
            <li  class="submenu <%= 'open' if ['indents', 'orders'].include?(controller_name) && ['unpack', 'producing'].include?(action_name) %>">
                <a href="#">
                    <i class="fa fa-wrench"></i> 生产任务 <span class="caret pull-right"></span>
                </a>
                <ul>
                    <li class='<%="#{'active' if controller_name == 'orders' and action_name == 'producing'}" %>'><a href="/orders/producing">生产中</a></li>
                    <li class='<%="#{'active' if controller_name == 'indents' and action_name == 'unpack'}" %>'><a href="/indents/unpack">包装</a></li>
                </ul>
            </li>
        <% end %>
        <% if current_user.permission?("IndentsController", "not_sent") ||
        current_user.permission?("OrdersController", "index")
        %>
            <li  class="submenu <%= 'open' if ('indents' == controller_name && 'not_sent' == action_name) || ('sents' == controller_name && 'index' == action_name) %>">
                <a href="#">
                    <i class="fa fa-truck"></i> 物流发货 <span class="caret pull-right"></span>
                </a>
                <ul>
                    <li class='<%="#{'active' if controller_name == 'indents' and action_name == 'not_sent'}" %>'><a href="/indents/not_sent">待发货</a></li>
                    <li class='<%="#{'active' if controller_name == 'sents' and action_name == 'index'}" %>'><a href="/sents">已发货</a></li>
                </ul>
            </li>
        <%end%>
    </ul>
</div>
</div>